<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:FiddlerCoreWpfDemo.ViewModels"
        xmlns:local="clr-namespace:FiddlerCoreWpfDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:HttpMessageViewModel />
    </Window.DataContext>
    <Grid>
        <TextBox Text="{Binding Url}" HorizontalAlignment="Right" Height="23" Margin="0,0,60,386" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="722" />
        <Button Command="{Binding Get}" Content="GET" Margin="0,0,10,386" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="45"/>
        <TextBox Text="{Binding Response}" Height="371" Margin="0,0,10,10" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" VerticalAlignment="Bottom" IsReadOnly="True" HorizontalAlignment="Right" Width="772"/>
    </Grid>
</Window>
